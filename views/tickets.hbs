<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <title>Food Coupon Request</title>
  <script>
    const programs = {
      "Annual Meetup": {
        date: "2025-06-20",
        venue: "Auditorium Hall A",
        vegRate: 120,
        nonVegRate: 150
      },
      "Tech Conference": {
        date: "2025-07-10",
        venue: "Conference Room B",
        vegRate: 130,
        nonVegRate: 160
      },
      "Cultural Fest": {
        date: "2025-08-01",
        venue: "Open Grounds",
        vegRate: 100,
        nonVegRate: 140
      }
    };

    function updateDetails() {
      const selected = document.getElementById("program").value;
      const details = programs[selected];
      if (details) {
        document.getElementById("date").value = details.date;
        document.getElementById("venue").value = details.venue;
        document.getElementById("vegRate").value = details.vegRate;
        document.getElementById("nonVegRate").value = details.nonVegRate;
      }
    }
  </script>
</head>
<body class="bg-gradient-to-r from-blue-100 via-purple-100 to-pink-100 min-h-screen flex items-center justify-center">
  <div class="bg-white p-10 rounded-2xl shadow-2xl w-full max-w-2xl">
    <h1 class="text-3xl font-extrabold text-purple-700 text-center mb-8">Request Food Coupons</h1>

    <form action="/user/tickets" method="POST" class="space-y-6">

      <!-- Employee Name -->
      <div>
        <label for="employeeName" class="block text-sm font-medium text-gray-700 mb-1">Employee Name</label>
        <input
          type="text"
          id="employeeName"
          name="employeeName"
          placeholder="Enter your full name"
          required
          class="w-full border border-gray-300 rounded-lg p-3 shadow-sm focus:ring-2 focus:ring-purple-400"
        />
      </div>

      <!-- Employee ID -->
      <div>
        <label for="employeeId" class="block text-sm font-medium text-gray-700 mb-1">Employee ID</label>
        <input
          type="text"
          id="employeeId"
          name="employeeId"
          placeholder="Enter your employee ID"
          required
          class="w-full border border-gray-300 rounded-lg p-3 shadow-sm focus:ring-2 focus:ring-purple-400"
        />
      </div>

      <!-- Program Selection -->
      <div>
        <label for="program" class="block text-sm font-medium text-gray-700 mb-1">Select Active Program</label>
        <select id="program" name="program" onchange="updateDetails()" required
                class="w-full border border-gray-300 rounded-lg p-3 shadow-sm focus:ring-2 focus:ring-purple-400">
          <option value="" disabled selected>Select a program</option>
          <option value="Annual Meetup">Annual Meetup</option>
          <option value="Tech Conference">Tech Conference</option>
          <option value="Cultural Fest">Cultural Fest</option>
        </select>
      </div>

      <!-- Auto-filled Details -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Date</label>
          <input type="text" id="date" name="date" readonly
                 class="w-full bg-gray-100 border border-gray-300 rounded-lg p-2.5" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Venue</label>
          <input type="text" id="venue" name="venue" readonly
                 class="w-full bg-gray-100 border border-gray-300 rounded-lg p-2.5" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Veg Plate Rate (₹)</label>
          <input type="text" id="vegRate" name="vegRate" readonly
                 class="w-full bg-gray-100 border border-gray-300 rounded-lg p-2.5" />
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Non-Veg Plate Rate (₹)</label>
          <input type="text" id="nonVegRate" name="nonVegRate" readonly
                 class="w-full bg-gray-100 border border-gray-300 rounded-lg p-2.5" />
        </div>
      </div>

      <!-- Coupon Counts -->
      <div class="grid grid-cols-2 gap-4">
        <div>
          <label for="vegCount" class="block text-sm font-medium text-gray-700 mb-1">No. of Veg Coupons</label>
          <input type="number" name="vegCount" id="vegCount" min="0" value="0"
                 class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-purple-400" />
        </div>
        <div>
          <label for="nonVegCount" class="block text-sm font-medium text-gray-700 mb-1">No. of Non-Veg Coupons</label>
          <input type="number" name="nonVegCount" id="nonVegCount" min="0" value="0"
                 class="w-full border border-gray-300 rounded-lg p-2.5 focus:ring-pink-400" />
        </div>
      </div>

      <!-- Confirm Button -->
      <button type="submit"
              class="w-full bg-purple-600 text-white py-3 rounded-xl font-semibold hover:bg-purple-700 transition">
        Confirm Request
      </button>
    </form>
  </div>
</body>
</html>
